    const colorPalette = album.color_palette;
    if (colorPalette && checkPaletteNotEmpty(colorPalette)) {
        bg_col = colorPalette.bg;
        fg_col = colorPalette.fg;
        a1_col = colorPalette.a1;
        a2_col = colorPalette.a2;
        a3_col = colorPalette.a3;
    }


    const colorPalette = album.color_palette;
    if (colorPalette && checkPaletteNotEmpty(colorPalette)) {
        bg_col = colorPalette.bg;
        fg_col = colorPalette.fg;
        a1_col = colorPalette.a1;
        a2_col = colorPalette.a2;
        a3_col = colorPalette.a3;
    }

    function checkPaletteNotEmpty(colorPalette: {bg: string; fg: string; a1: string; a2: string; a3: string;}) {
        if (colorPalette.bg && colorPalette.bg.length > 0 &&
        colorPalette.fg && colorPalette.fg.length > 0 &&
        colorPalette.a1 && colorPalette.a1.length > 0 &&
        colorPalette.a2 && colorPalette.a2.length > 0 &&
        colorPalette.a3 && colorPalette.a3.length > 0) {
            return true;
        }
        return false;
    }



    @media (prefers-color-scheme: dark) {
      :root {
        --dark-accent-1: #152033;
        --accent-1: #1D2D44;
        --accent-2: #3E5C76;
        --accent-3: #748CAB;
        --light-accent-1: #B2BCC2;
      }
